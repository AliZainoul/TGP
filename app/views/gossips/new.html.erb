<h1>Welcome to Gossip's building page!</h1>

<%= form_for @gossip do |f| %>
  <div class="form-group">
    <label> Gossip's Title: </label>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <label> Gossip's Content: </label>
    <%= f.text_area :gossip_content, class: 'form-control' %>
  </div>

  <div class="form-group">
    <button type="submit" class="btn btn-primary"> Create Gossip?</button>
  </div>
<% end %>
